@using GoogleAuthentication.Models.Payment;
@model PaymentModel;
@{
    ViewData["Title"] = "Chat Page";
}
<h1>Payment Register</h1>
<div>
    <form asp-action="SubmitPayment">
        <div class="row">
            <div class="offset-1 col-2">
                <strong>Name</strong>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="offset-1 col-2">
                <strong>Mobile</strong>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Mobile" class="form-control" />
            </div>
        </div> <div class="row">
            <div class="offset-1 col-2">
                <strong>Email</strong>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Email" class="form-control" />
            </div>
        </div> <div class="row">
            <div class="offset-1 col-2">
                <strong>Amount</strong>
            </div>
            <div class="col-4">
                Rs. @Model.Amount.ToString("0.00")
                <input type="hidden" asp-for="Amount" value="@Model.Amount" />
            </div>
        </div>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-2 m-5">
                <input type="submit" value="OrderPayemnt" style="background-color:lawngreen" />
            </div>
            
        </div>
    </form>

</div>